html,
body {
  font-family: 'Jost', 'Helvetica', 'Helvetica Neue', 'Segoe UI', 'Helvetica', 'Arial';
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  text-rendering: geometricPrecision;
  color: #333;
}

.home {
	background: #f8fdf4 no-repeat bottom url('/assets/img/hero.jpg');
	background-size: 1470px;
	height: 440px;
	padding: 0 20px;
	text-align: center;
	max-width: none;
	margin: 0 auto;
}

.home .hero {
	padding-top: 160px;
}

.home .hero .action-button {
	background: #61a60e;
	border: 0;
}

.home .feature h2 {
	color: #333;
}

.home .hero .action-button:hover {
	background: #61a60e
}

a {
	color: #61a60e;
}

a.sidebar-link.active {
	color: #61a60e;
    border-left-color: #61a60e;
}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
	border-color: #61a60e
}

.custom-block.tip {
	border-color: #1784d8
}

a.sidebar-link:hover {
	color: #61a60e;
}

.home .description {
	margin-top: 10px !important
}

.home .hero h1 {
	margin-bottom: 0;
}

.home .hero img {
	display: none;
}

.features {
	max-width: 960px;
	margin: 0 auto;
	text-align: center;
}

.features p {
	height: 90px;
}

.content.custom .feature img {
	max-width: 80px;
}

pre {
	max-height: 400px;
	overflow: auto;
}

code {
	white-space : pre-wrap !important;
}

.content p img {
	margin-top: 30px;
	margin-bottom: 30px;
	display: block;
	margin-left: auto;
	margin-right: auto;
}

.custom-block.tip, .custom-block.warning, .custom-block.danger {
	margin-top: 35px;
	margin-bottom: 35px;
}