@import url('https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,400;0,500;0,600;1,400;1,500;1,600&display=swap');

@font-face{
	font-family: 'Jost';
	font-weight: 400;
	font-style: normal;
}

@font-face{
	font-family: 'Jost';
	font-weight: 400;
	font-style: italic;
}

@font-face{
	font-family: 'Jost';
	font-weight: 500;
	font-style: normal;
}

@font-face{
	font-family: 'Jost';
	font-weight: 500;
	font-style: italic;
}

@font-face{
	font-family: 'Jost';
	font-weight: 600;
	font-style: normal;
}

@font-face{
	font-family: 'Jost';
	font-weight: 600;
	font-style: italic;
}

$nprogressColor = #1784D8
$accentColor = #1784D8
$textColor = #343A40
$navbarHeight = 4rem

html,
body {
	font-family: 'Jost', 'Helvetica', 'Helvetica Neue', 'Segoe UI', 'Helvetica', 'Arial';
	-moz-osx-font-smoothing: grayscale;
	-webkit-font-smoothing: antialiased;
	text-rendering: geometricPrecision;
	color: #343A40;
	background: #f4f4f4;
	height: 100%;
}

.theme-container.no-sidebar {
	height: 100%;
	background: #FFF;
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	overflow: auto;
}

.page {
	min-height: calc(100vh - 35px);
}

#app, .theme-container {
	height: 100%;
}

.home {
	background: #ffffff;
	height: 500px;
	padding: 0 30px;
	text-align: center;
	max-width: none;
	margin: 0 auto;
}

.home .hero {
	padding-top: 20px;
}

.home .hero .action-button {
	background: #61a60e;
	border: 0;
}

.home .feature h2 {
	color: #343A40;
}

.home .hero .action-button:hover {
	background: #388b34;
}

.home .hero .description {
    color: #737a96;
}

.home .footer {
	color #737a96;
}

.home .feature p {
    color: #343A40;
}

.home .theme-default-content {
	background: #f6f7f7;
}

a {
	color: #1784D8;
}

.sidebar {
	font-size: 18px;
}

a.sidebar-link {
	height: 50px;
	padding-top: 13px;
}

.navbar {
	border-bottom: 2px solid #F4F4F4;
}

.sidebar-group ul.sidebar-sub-headers a.sidebar-link {
	padding-top: 13px;
}

.sidebar-group a.sidebar-link.active {
	color: #1784D8;
	border-left-color: #1784D8;
	background-color: #F3F8FA;
}


.sidebar-group ul.sidebar-sub-headers a.sidebar-link.active {
	background-color: #FFFFFF;
}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
	border-color: #1784D8
}

.custom-block.tip {
	border-color: #1784D8
}

.sidebar-group a.sidebar-link:hover {
	color: #1784D8;
}

.home .features {
	border-top: 0;
	padding-top: 30px;
}

.home .description {
	margin-top: 10px !important
}


.features {
	max-width: 960px;
	margin: 0 auto;
	text-align: center;
}

.features p {
	height: 90px;
}

.content.custom .feature img {
	max-width: 80px;
}

pre {
	max-height: 400px;
	overflow: auto;
}

code {
	white-space : pre-wrap !important;
}

.theme-default-content img {
	margin-top: 30px;
	margin-bottom: 30px;
	display: block;
	margin-left: auto;
	margin-right: auto;
}

.custom-block.tip, .custom-block.warning, .custom-block.danger {
	margin-top: 35px;
	margin-bottom: 35px;
}

.home .feature img {
	width: 40%
}

a, p a code {
	color: #1784D8;
}

.dropdown-wrapper .nav-dropdown .dropdown-item a.router-link-active, .dropdown-wrapper .nav-dropdown .dropdown-item a:hover {
	color: #1784D8;
}

.theme-default-content:not(.custom), .page-edit, .page-nav {
	max-width: 1024px !important;
	margin: 0 auto;
	padding: 2rem 2.5rem;
}

.circle {
    width: 130px;
    height: 130px;
    float: left;
    background-color: #000000;
    border-radius: 100px;
    margin-right: 20px;
}

.cool-table table {
	border: 0px;
}